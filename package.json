{
  "name": "pixels-roll20-chrome-extension",
  "version": "1.0.0",
  "description": "Connect Pixels dice to Roll20 via Bluetooth with advanced modifier support and seamless integration",
  "scripts": {
    "test": "jest",
    "test:fast": "jest --maxWorkers=1 --no-cache --no-watchman",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md}\"",
    "prepare": "husky",
    "precommit": "npm run format:check && npm run lint && npm test"
  },
  "keywords": [
    "chrome-extension",
    "roll20",
    "pixels-dice",
    "bluetooth",
    "dnd"
  ],
  "author": "Enhanced by community contributors",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/jest": "^29.5.11",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/jest/**/*.test.js",
      "!<rootDir>/tests/jest/experimental/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/content/**/*.js",
      "!src/content/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/jest/experimental/"
    ],
    "maxWorkers": 1,
    "testTimeout": 5000,
    "detectOpenHandles": false,
    "forceExit": true,
    "cache": false,
    "watchman": false
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,html,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "eslint": "^9.30.0"
  }
}
